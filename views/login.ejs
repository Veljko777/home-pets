<%include ./partials/header%>

<div class="container">
    <div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-8 text-center ">
                    <form action="/login" method="post" id="login" class=" mt-3 ">       
                        <label class="my-1 mr-2 pb-2 mt-3" for="username">Username:</label>
                        <input class="form-control mb-2 mr-sm-2 mt-2" type="text" name="username"  id="username"  placeholder=" Username">
                        <label class="my-1 mr-2 pb-2 mt-3" for="exampleInputPassword1">Password:</label>
                        <input class="form-control mb-2 mt-2 mr-sm-2" type="password" name="password"  id="exampleInputPassword1" placeholder=" Password">
                        <button  type="submit" class="btn btn-primary m-2">Login</button>
                    </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7 login_background mt-5">   
        </div>
        <div class="col-md-5">
            <div class="register mt-5  ">
                <h3><u>You don't have account? </u></h3>
                <form action="/register" method="post" >
                    <div class="form-group mt-3 ">
                        <label class="mb-0" for="InputUsername">Username</label>
                        <input type="text" name="username" class="form-control " id="InputUsername"  placeholder="Username" required>
                    </div>
                    <div class="form-group mt-2">
                        <label class="mb-0" for="InputEmail">Email</label>
                        <input type="email" name="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label class="mb-0" for="password">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label class="mb-0" for="confirm_password">Confirm password</label>
                        <input type="password" class="form-control" id="confirm_password" placeholder="Confirm password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>
    

<%include ./partials/footer%>