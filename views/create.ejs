<%include ./partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-6 create">
            <form action="/" method="post" class="mt-2">
                <div class="form-group">
                    <label for="pet_name">Pet name:</label>
                    <input class="form-control" id="pet_name" type="text" name="name" placeholder="Name of your pet">
                </div>
                <div class="form-group ">  
                    <label for="pet_species">Species:</label>
                    <select name="species" class="form-control" id="pet_species" >
                        <option>Dog</option>
                        <option>Cat</option>
                        <option>Rabbit</option>
                        <option>Parrot</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="pet_breed">Breed:</label>
                    <input class="form-control" type="text" id="pet_breed" name="breed" placeholder="e.g. Retriever,Persian Cats...">
                </div>
                <div class="form-group">
                    <label for="pet_image">Image:</label>
                    <input class="form-control" type="text" id="pet_image" name="image" placeholder="Photo URL">
                </div>
                <div class="form-group">   
                    <label for="pet_description">Description:</label>        
                    <textarea name="description" class="form-control" id="pet_description" rows="5" id="comment" placeholder="Tell us something about your pet"></textarea>
                </div>       
                <button class="btn btn-primary">Submit</button>
                <br>
                <a href="/">Go back</a>
            </form>
        </div>
    </div>
</div>




<%include ./partials/footer%>